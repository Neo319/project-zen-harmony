extends layout 

block content
  h1=title 
  
  if !category_items.length
    h2 #[strong Are you sure you want to delete this category?]
    h3 #{category.name}
    p #{category.description}
    form(method="POST")
      button(type="submit") Delete
  else 
    //- this should never actually show up
    h2 #[strong Delete the following items before attempting to delete this category:]
    ul 
      each item in category_items
        li 
          a(href=item.url) #{item.name}
